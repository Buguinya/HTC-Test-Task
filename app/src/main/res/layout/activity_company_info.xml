<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompanyInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:text="@string/company"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

         <TextView
             android:id="@+id/name_of_company_tv"
             android:paddingLeft="10dp"
             android:textSize="20sp"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="2"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/age"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/age_of_company_tv"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/competences"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/competences_of_company_tv"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/employees_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/employee_item"
        />

</LinearLayout>
